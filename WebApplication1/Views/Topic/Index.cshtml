@model  IEnumerable<Topic>
@{
    ViewData["Title"] = "Index";
}
@if(TempData["success"] != null)
{
    <div class="alert alert-success" role="alert">
  @TempData["success"]
</div>
}


<div class="container">
    <div class="container row">
        <div class="col-10">
            <h1>Создать новую тему</h1>
        </div>
        <div class="col">
            <div>
                   <a class="btn btn-primary btn-lg" asp-controller="Topic" asp-action="Create">Вперед</a>
            </div>
            

        </div>


    </div>
        <h2>Список тем</h2>
    <div class="list-group">
        @foreach (var obj in Model)
        {
            <div class="list-group-item list-group-item-action flex-column ">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">@obj.Name</h5>
      <small> Создана @obj.Created</small>
    </div>
    <p class="mb-1">@obj.About</p>
    <a class="btn btn-primary mt-2" btn-lg" asp-controller="Topic" asp-action="Edit" asp-route-id="@obj.Id">Редактировать</a>
    <a class="btn btn-danger mt-2" btn-lg" asp-controller="Topic" asp-action="Delete" asp-route-id="@obj.Id">Удалить</a>
  </div>
        }
        
  
</div>
</div>
